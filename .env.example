# Audio Stream Recorder - Environment Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Port for the web interface (default: 8666)
WEB_PORT=8666

# Host interface to bind to (0.0.0.0 for all interfaces)
WEB_HOST=0.0.0.0

# Secret key for Flask sessions and CSRF protection
# IMPORTANT: Change this to a random string in production!
SECRET_KEY=your-secret-key-here-change-in-production

# Flask debug mode (set to false in production)
FLASK_DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL (SQLite by default)
DATABASE_URL=sqlite:///data/audio_recorder.db

# Data directory for database and application files
DATA_DIR=data

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Directory for log files
LOG_DIR=logs

# =============================================================================
# RECORDING CONFIGURATION
# =============================================================================

# Maximum number of simultaneous recordings
# Adjust based on your system resources and network capacity
MAX_CONCURRENT_RECORDINGS=3

# Directory for temporary recording storage
RECORDINGS_DIR=recordings

# =============================================================================
# FILE TRANSFER CONFIGURATION
# =============================================================================

# Whether to delete local files after successful SCP transfer
# Set to false if you want to keep local copies
CLEANUP_AFTER_TRANSFER=true

# =============================================================================
# ARTWORK CONFIGURATION
# =============================================================================

# Directory for uploaded artwork files
ARTWORK_DIR=artwork

# Maximum artwork file size in MB
MAX_ARTWORK_SIZE_MB=10

# =============================================================================
# SSH CONFIGURATION
# =============================================================================

# Directory containing SSH keys and configuration files
SSH_CONFIG_DIR=config

# =============================================================================
# RETRY AND RELIABILITY CONFIGURATION
# =============================================================================

# Default number of retry attempts for failed operations
DEFAULT_MAX_RETRIES=3

# Delay between retry attempts in seconds
RETRY_DELAY_SECONDS=60

# =============================================================================
# SYSTEM MONITORING CONFIGURATION
# =============================================================================

# Monitoring check interval in seconds
MONITORING_INTERVAL=60

# Disk usage warning threshold (percentage)
DISK_WARNING_THRESHOLD=80.0

# Disk usage critical threshold (percentage)
DISK_CRITICAL_THRESHOLD=90.0

# Memory usage warning threshold (percentage)
MEMORY_WARNING_THRESHOLD=80.0

# Memory usage critical threshold (percentage)
MEMORY_CRITICAL_THRESHOLD=90.0

# =============================================================================
# EXTERNAL TOOLS CONFIGURATION
# =============================================================================

# Path to FFmpeg binary (usually just 'ffmpeg' if in PATH)
FFMPEG_PATH=ffmpeg

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================

# System timezone (affects scheduling and logging timestamps)
# Examples: UTC, America/New_York, Europe/London, Asia/Tokyo
TZ=UTC

# =============================================================================
# PRODUCTION OPTIMIZATIONS (uncomment for production)
# =============================================================================

# Enhanced retry settings for production reliability
# DEFAULT_MAX_RETRIES=5
# RETRY_DELAY_SECONDS=120

# Increased concurrent recordings for powerful servers
# MAX_CONCURRENT_RECORDINGS=5

# Larger artwork size limit for high-quality images
# MAX_ARTWORK_SIZE_MB=20

# More frequent monitoring for production systems
# MONITORING_INTERVAL=30

# Stricter resource thresholds for production alerts
# DISK_WARNING_THRESHOLD=75.0
# DISK_CRITICAL_THRESHOLD=85.0
# MEMORY_WARNING_THRESHOLD=75.0
# MEMORY_CRITICAL_THRESHOLD=85.0