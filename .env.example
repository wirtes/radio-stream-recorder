# Audio Stream Recorder Configuration
# Copy this file to .env and modify as needed

# Web Interface
WEB_PORT=8666
WEB_HOST=0.0.0.0
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///data/audio_recorder.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Recording Settings
MAX_CONCURRENT_RECORDINGS=3
RECORDINGS_DIR=recordings

# File Transfer
CLEANUP_AFTER_TRANSFER=true

# Artwork
ARTWORK_DIR=artwork
MAX_ARTWORK_SIZE_MB=10

# SSH Configuration
SSH_CONFIG_DIR=config

# Retry Settings
DEFAULT_MAX_RETRIES=3
RETRY_DELAY_SECONDS=60

# FFmpeg
FFMPEG_PATH=ffmpeg